{
  "manifest_version": 3,
  "name": "Pokémon Sidebar",
  "version": "3.0.0",
  "description": "Pick a starter Pokémon and play in a Chrome side panel.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_title": "Open Pokémon Sidebar"
  },

  "side_panel": {
    "default_path": "index.html"
  },

 "background": {
    "service_worker": "service-worker.js"
  },

  "permissions": [
    "storage",
    "contextMenus",
    "notifications",
    "sidePanel"
  ],

  "host_permissions": [
    "https://dstokesncstudio.com/*",
    "https://pokeapi.co/*",
    "https://play.pokemonshowdown.com/*"
  ],

  "content_security_policy": {
    "extension_pages": "default-src 'self'; connect-src 'self' https://pokeapi.co https://dstokesncstudio.com; img-src 'self' data: https://*; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; font-src 'self' https://cdn.jsdelivr.net; media-src 'self' https://raw.githubusercontent.com https://github.com; script-src 'self'"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["content/content.css"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "starters.json",
        "css/*",
        "js/*",
        "content/*",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
